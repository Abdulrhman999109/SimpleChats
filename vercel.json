{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/pages/index.js"
    },
    {
      "src": "/chat",
      "dest": "/pages/chat.js"
    },
    {
      "src": "/about",
      "dest": "/pages/about.js"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.yourwebsite.com",
    "DATABASE_URL": "postgres://user:password@localhost:5432/yourdatabase",
    "NEXTAUTH_SECRET": "your-next-auth-secret"
  },
  "functions": {
    "api/**.js": {
      "maxDuration": 10,
      "memory": 512
    }
  }
}
